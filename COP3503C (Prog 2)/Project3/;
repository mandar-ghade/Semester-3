#include "tile.h"

ADJACENT_MINES adjacent_mines_as_literal(int distance) {
	switch (distance) {
		case 0:
			return ADJACENT_MINES::ZERO;
		case 1:
			return ADJACENT_MINES::ONE_AWAY;
		case 2:
			return ADJACENT_MINES::TWO_AWAY;
		case 3:
			return ADJACENT_MINES::THREE_AWAY;
		case 4:
			return ADJACENT_MINES::FOUR_AWAY;
		case 5:
			return ADJACENT_MINES::FIVE_AWAY;
		case 6:
			return ADJACENT_MINES::SIX_AWAY;
		case 7:
			return ADJACENT_MINES::SEVEN_AWAY;
		case 8:
			return ADJACENT_MINES::EIGHT_AWAY;
		default:
			throw std::runtime_error("Incorrect mine distance!");
	}
}

